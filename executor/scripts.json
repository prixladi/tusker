{
  "$schema": "https://deno.land/x/denon@2.4.6/schema.json",
  "watch": false,
  "scripts": {
    "start:worker": {
      "cmd": "deno run --allow-net --allow-env --import-map=import_map.json ./src/worker.ts",
      "env": {
        "ENV": "development",
        "QUEUE_NAME": "test-queue"
      }
    },
    "lint": {
      "cmd": "deno lint"
    },
    "format": {
      "cmd": "deno format"
    },
    "cache": {
      "cmd": "deno cache --import-map=import_map.json ./src/worker.ts"
    }
  }
}
