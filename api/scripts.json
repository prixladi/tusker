{
  "$schema": "https://deno.land/x/denon@2.4.6/schema.json",
  "watch": false,
  "scripts": {
    "start": {
      "cmd": "deno run --allow-net --allow-env --import-map=import_map.json ./src/app.ts",
      "env": {
        "ENV": "development"
      }
    },
    "lint": {
      "cmd": "deno lint"
    },
    "format": {
      "cmd": "deno fmt"
    },
    "cache": {
      "cmd": "deno cache --import-map=import_map.json ./src/app.ts"
    }
  }
}
